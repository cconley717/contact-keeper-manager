{
  "name": "contact-keeper-manager",
  "version": "1.0.0",
  "type": "module",
  "description": "NodeJS TypeScript Express app for CSV contact management with SQLite",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "node -e \"require('fs').cpSync('public', 'dist/public', {recursive: true})\"",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "npm run build && node dist/server.js",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "keywords": [
    "express",
    "typescript",
    "sqlite",
    "csv",
    "typeorm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "csv-parse": "^5.6.0",
    "express": "^4.21.1",
    "multer": "^2.0.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.9.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
